    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".pantaipadang">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>
            <com.denzcoskun.imageslider.ImageSlider
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:id="@+id/imageslider"
                app:iss_selected_dot="@drawable/indicator_selected"
                app:iss_unselected_dot="@drawable/indicator_unselected"
                tools:ignore="MissingConstraints"/>
            <RelativeLayout
                android:id="@+id/lyr3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:layout_below="@id/imageslider">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/txtpantaipadang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pantai Padang"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtpantaipadang1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtpantaipadang"
                        android:layout_marginTop="10dp"
                        android:text="5.0 km"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtpantaipadang2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtpantaipadang"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/txtpantaipadang1"
                        android:text="dari lokasi anda"
                        android:textColor="#8A8A8A" />
                    <RelativeLayout
                        android:id="@+id/txtpantaipadang3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtpantaipadang2"
                        android:layout_marginTop="16dp">

                        <com.borjabravo.readmoretextview.ReadMoreTextView
