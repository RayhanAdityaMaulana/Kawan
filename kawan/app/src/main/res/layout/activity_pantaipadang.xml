                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text="@string/pantaipadang"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:colorClickableText="@color/bluesweet"
                            app:trimCollapsedText="@string/text1"
                            app:trimExpandedText="@string/text1"
                            app:trimMode="trimModeLength" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/txtpantaipadang4"
                        android:layout_below="@id/txtpantaipadang3"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_putih">
                            <RelativeLayout
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:id="@+id/cardtiket"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/tiket"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_ticket_svgrepo_com"/>
                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/txttiket"
                                        android:layout_toRightOf="@+id/tiket"
                                        android:layout_marginLeft="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tiket"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/txttiket1"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="gratis"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/cardmotor"
                                    android:layout_below="@+id/cardtiket"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/motor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_motorcycle_svgrepo_com"/>
                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/txtmotor"
                                        android:textColor="@color/black"
                                        android:layout_toRightOf="@+id/motor"
                                        android:layout_marginLeft="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Parkir roda dua"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/black"
                                        android:id="@+id/txtmotor1"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 2.000"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/cardmobil"
                                    android:layout_below="@+id/cardmotor"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/mobil"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_car_svgrepo_com__1_"/>
                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/txtmobil"
                                        android:layout_toRightOf="@+id/mobil"
                                        android:layout_marginLeft="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Parkir roda empat"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/txtmobil1"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 5.000"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lyrdayatarik"
